<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rl_test"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/t1"
            android:layout_marginTop="30dp"
            android:text="磁盘总容量："
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/size_total"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/t2"
            android:text="剩余容量："
            android:layout_below="@+id/size_total"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/size_free"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_below="@+id/size_total"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/t3"
            android:layout_below="@+id/size_free"
            android:layout_marginTop="20dp"
            android:text="已填充："
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/size_fill"
            android:layout_below="@+id/size_free"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/t3"
            android:text="0 MB (0%)"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t4"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="填充大小（MB）："
            android:layout_below="@+id/size_fill"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/size_input"
            android:layout_below="@+id/size_fill"
            android:layout_toEndOf="@+id/t4"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:numeric="integer"
            android:gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/t5"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="循环次数："
            android:layout_below="@+id/size_input"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/fill_count"
            android:layout_below="@+id/size_input"
            android:layout_toEndOf="@id/t5"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:numeric="integer"
            android:gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/size_input"
            android:layout_toEndOf="@id/fill_count"
            android:text="（不填为无限次）"
            android:textColor="@color/black"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/btn_fill"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fill_count"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:text="填充"/>
        <Button
            android:id="@+id/btn_stop"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_fill"
            android:layout_marginTop="20dp"
            android:textSize="25sp"
            android:text="停止"/>
        <Button
            android:id="@+id/btn_clear"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_stop"
            android:layout_marginTop="20dp"
            android:text="清除"
            android:textSize="25sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_report"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >
        <TextView
            android:id="@+id/t6"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报告"
            android:textColor="@color/black"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/t7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t6"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="循环次数："/>
        <TextView
            android:id="@+id/filled_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_below="@+id/t6"
            android:layout_toEndOf="@id/t7"
            />
        <TextView
            android:id="@+id/t9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:text="开始时间: "
            android:layout_marginTop="20dp"
            android:layout_below="@+id/filled_count"/>
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/filled_count"
            android:layout_toEndOf="@id/t9"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/t10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/start_time"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="结束时间: "/>
        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start_time"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/t10"/>
        <TextView
            android:id="@+id/t8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@id/end_time"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="平均时长："/>
        <TextView
            android:id="@+id/fill_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/end_time"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_toEndOf="@+id/t8"/>
        <TextView
            android:id="@+id/t11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/fill_time"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="平均填充速度: "/>
        <TextView
            android:id="@+id/fill_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fill_time"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:layout_toEndOf="@+id/t11"/>

        <TextView
            android:id="@+id/t12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_below="@+id/fill_speed"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="异常次数: "/>
        <TextView
            android:id="@+id/exception_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fill_speed"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:text="0"
            android:textSize="25sp"
            android:layout_toEndOf="@+id/t12"/>
        <Button
            android:id="@+id/btn_exception"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看异常"
            android:textSize="25sp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/exception_count"
            android:layout_below="@id/fill_speed"/>
    </RelativeLayout>



</LinearLayout>